doctype html
html
    head
        meta(charset="utf-8")
        
        meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
        
        meta(name="author", content="Wayou")
        
        meta(name="description", content="hichat  a simple chat application built with node.js and websocket")
        
        meta(name="viewport", content="width=device-width, initial-scale=1")
        
        title hichat
        
        link(rel="stylesheet", href="/stylesheets/main.css")
        
        link(rel="shortcut icon", href="/images/content/favicon.ico", type="image/x-icon")
        
        link(rel="icon", href="/images/content/favicon.ico", type="image/x-icon")
    
    body
        .wrapper
            .banner
                h1 HiChat :)
                
                span#status
            
            #historyMsg
            
            .controls
                .items
                    input#colorStyle(type="color", placeholder="#000", title="font color")
                    
                    input#emoji(type="button", value="emoji", title="emoji")
                    
                    label.imageLable(for="sendImage")
                        input(type="button", value="image")
                        
                        input#sendImage(type="file", value="image")
                    
                    input#clearBtn(type="button", value="clear", title="clear screen")
                
                textarea#messageInput(placeholder="enter to send")
                
                input#sendBtn(type="button", value="SEND")
                
                #emojiWrapper
        
        #loginWrapper
            p#info connecting to server...
            
            #nickWrapper
                input#nicknameInput(type="text", placeholder="nickname")
                
                input#loginBtn(type="button", value="OK")
         
        footer
            small
                 view on
                a(href="https://github.com/Wayou/HiChat") GitHub
                  
                a(href="mailto:liuwayong@gmail.com") contact me

        script(src="/socket.io/socket.io.js")
        script(src="/javascripts/hichat.js")

